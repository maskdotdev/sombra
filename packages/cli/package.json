{
	"name": "sombra-cli",
	"version": "0.3.6",
	"description": "Sombra CLI - command-line interface for Sombra graph database",
	"bin": {
		"sombra": "bin/sombra.js"
	},
	"files": [
		"bin/**",
		"dist/**",
		"README.md",
		"LICENSE"
	],
	"dependencies": {
		"sombradb": "^0.5.0"
	},
	"bundledDependencies": [
		"sombradb"
	],
	"scripts": {
		"build": "bun build ./src/index.ts --target node --external sombradb --outdir dist --format cjs --sourcemap",
		"pretest": "bun run build",
		"test": "node test/cli.test.js && node test/sombradb-loading.test.js",
		"test:cli": "node test/cli.test.js",
		"test:loading": "node test/sombradb-loading.test.js",
		"test:verbose": "VERBOSE=1 npm test",
		"prepublishOnly": "bun run build"
	},
	"engines": {
		"node": ">=18",
		"bun": ">=1.0.0"
	},
	"publishConfig": {
		"access": "public"
	},
	"keywords": [
		"sombra",
		"graph",
		"database",
		"cli",
		"graphdb"
	]
}
