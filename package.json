{
  "name": "sombra",
  "version": "0.1.1",
  "description": "A high-performance graph database with ACID transactions",
  "main": "index.js",
  "types": "sombra.d.ts",
  "napi": {
    "name": "sombra",
    "triples": {
      "defaults": true,
      "additional": [
        "x86_64-pc-windows-msvc",
        "i686-pc-windows-msvc",
        "x86_64-apple-darwin",
        "aarch64-apple-darwin",
        "x86_64-unknown-linux-gnu",
        "x86_64-unknown-linux-musl",
        "aarch64-unknown-linux-gnu",
        "armv7-unknown-linux-gnueabihf"
      ]
    }
  },
  "scripts": {
    "build": "napi build --platform --release && node scripts/fix-exports.js",
    "build:debug": "napi build --platform && node scripts/fix-exports.js",
    "prepublishOnly": "napi prepublish -t npm && node scripts/fix-exports.js",
    "test": "node test/test.js",
    "test:comprehensive": "node test/test-comprehensive.js",
    "test:all": "npm test && npm run test:comprehensive",
    "test:debug": "node --inspect-brk test/test.js",
    "example": "node examples/nodejs-example.js"
  },
  "devDependencies": {
    "@napi-rs/cli": "^2.18.0",
    "@types/node": "^24.8.1",
    "typescript": "^5.0.0"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/your-username/sombra.git"
  },
  "keywords": [
    "graph",
    "database",
    "graphdb",
    "acid",
    "transactions",
    "rust",
    "napi",
    "nodejs"
  ],
  "author": "Your Name <your.email@example.com>",
  "license": "MIT",
  "files": [
    "index.d.ts",
    "index-napi.js",
    "sombra.d.ts",
    "index.js",
    "*.node"
  ],
  "engines": {
    "node": ">= 14"
  }
}
